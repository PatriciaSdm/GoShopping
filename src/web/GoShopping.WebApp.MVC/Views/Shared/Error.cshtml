@model GoShopping.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}


@{
    if (Model == null)
    {
        <p>
            <h2>Oops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h2>
        </p>
    }
    else
    {
        ViewData["Title"] = Model.Title;
        <div>
            <h2>@Html.Raw(Model.Message)</h2>
        </div>
    }

}